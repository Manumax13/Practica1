@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>TEORIA - PC1 - FORMULARIO DE PAGO</h1>
    <form method="post" asp-action="Pago" asp-controller="Home">
  <div class="form-group">
    <label for="numeroTarjeta">Ingresar el número de tarjeta</label>
    <input type="text" class="form-control" name="numeroTarjeta" placeholder="Ingrese el número de su tarjeta">
  </div>
  <div class="form-group">
    <label for="fechaVencimiento">Fecha de vencimiento del pago</label>
    <input type="date" class="form-control" name="fechaVencimiento">
  </div>
  <div class="form-group">
    <label for="montoPagar">Ingresar el monto a pagar</label>
    <input type="number" class="form-control" name="montoPagar" placeholder="Ingrese el monto a pagar">
  </div>
  <br>
  <button type="submit" class="btn btn-primary">Enviar</button>
  <br>
</form>

<div class="container">
  <h2>RESULTADO:</h2>
  <p>NÚMERO DE TARJETA: @ViewBag.NumeroTarjeta</p>
  <p>DIAS DE MORA: @ViewBag.diasAtraso</p>
  <p>COBRO POR MORA: @ViewBag.Mora</p>
  <p>PAGO FINAL: @ViewBag.PagoFinal</p>
</div>